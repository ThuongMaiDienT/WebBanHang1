@model WebBanHang.Models.Customer
@{
    ViewBag.Title = "Register";
}
@Html.ValidationSummary()
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>User name</label>
        @Html.TextBoxFor(m => m.Id, null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(m => m.Password, null, new { @class = "form-control",Type="Password" })
    </div>

    <div class="form-group">
        <label>Full Name</label>
        @Html.TextBoxFor(m => m.Fullname, null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(m => m.Address, null, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Phone</label>
        @Html.TextBoxFor(m => m.Phone, null, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <button class="btn btn-danger">Register</button>
    </div>
}